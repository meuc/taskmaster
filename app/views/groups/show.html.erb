<h1>
	<%= @group.name %>
</h1>

<h2>Group members:</h2>
<ul>
	<% @group.users.each do |user| %>
		<li>
			<%= link_to "#{user.first_name} #{user.last_name}", user %>
		</li>
	<% end %>
</ul>

<%= link_to "Add new person", choose_user_path %>

<%= link_to "Leave the group", leave_group_path(@group), method: :delete, data: { confirm: "Are you sure?" } %>

<%= link_to "Your task list", tasks_path %>

<%= link_to "Delete group", @group, method: :delete, data: { confirm: "Are you sure?" } %>