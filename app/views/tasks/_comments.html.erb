			</div>
			
			<div class="field">	
				<%= f.radio_button :image_name, "Claps-icon.png", class: "stamp-radio" %>
				<%= f.label "image_name_claps-iconpng", image_tag("feedback-emoticons/Claps-icon.png"), class: "stamp" %>
			</div>
			
			<div class="field">	
				<%= f.radio_button :image_name, "Rock-andRoll-icon.png", class: "stamp-radio" %>
				<%= f.label "image_name_rock-androll-iconpng", image_tag("feedback-emoticons/Rock-andRoll-icon.png"), class: "stamp" %>
			</div>
			
			<div class="field">	
				<%= f.radio_button :image_name, "Like-2-icon.png", class: "stamp-radio" %>
				<%= f.label "image_name_like-2-iconpng", image_tag("feedback-emoticons/Like-2-icon.png"), class: "stamp" %>
			</div>
			
			<div class="field">	
