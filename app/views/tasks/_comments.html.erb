<div class="comments-wrap">
	<div class="stamps-wrap" data-task-id="<%= task.id %>">
		<% task.comments.each do |comment| %>
		<%= render partial: "comments/stamp", locals: { comment: comment } %>
		<% end %>
	</div>
	<!-- here is the list to choose from -->
	<div>
		<div class="stamp-toggle">
			<%= image_tag("icons/Speach-Bubble-icon.png") %>
			<p>Leave your stamp!</p>
		</div>
	
		<div class="stamps-menu gradient">
			<%= form_for task.comments.new, remote: true, namespace: "#{task.id}_comment" do |f| %>	
			<%= hidden_field_tag "task_id", task.id %>
			
			<div class="field">	
				<%= f.radio_button :image_name, "Depression-icon.png", class: "stamp-radio" %>
				<%= f.label "image_name_depression-iconpng",  image_tag("feedback-emoticons/Depression-icon.png"), class: "stamp" %>
			</div>
			
			<div class="field">	
				<%= f.radio_button :image_name, "Friendster-icon.png", class: "stamp-radio" %>
				<%= f.label "image_name_friendster-iconpng", image_tag("feedback-emoticons/Friendster-icon.png"), class: "stamp" %>
			</div>
			
			<div class="field">	
				<%= f.radio_button :image_name, "Angry-icon.png", class: "stamp-radio" %>
				<%= f.label "image_name_angry-iconpng", image_tag("feedback-emoticons/Angry-icon.png"), class: "stamp" %>
			</div>
			
			<div class="field">	
				<%= f.radio_button :image_name, "Confused-icon.png", class: "stamp-radio" %>
				<%= f.label "image_name_confused-iconpng", image_tag("feedback-emoticons/Confused-icon.png"), class: "stamp" %>
			</div>
			
			<div class="field">	
				<%= f.radio_button :image_name, "Happy-icon.png", class: "stamp-radio" %>
				<%= f.label "image_name_happy-iconpng", image_tag("feedback-emoticons/Happy-icon.png"), class: "stamp" %>
			</div>
			
			<div class="field">	
				<%= f.radio_button :image_name, "Danger-2-icon.png", class: "stamp-radio" %>
